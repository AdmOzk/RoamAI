@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-center mb-4" style="color: #007bff; font-weight: bold;">@ViewData["Title"]</h3>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="p-4 rounded shadow-sm" style="background-color: rgba(255, 255, 255, 0.9);">
            <p class="mb-3">
                Your account contains personal data that you have given us. This page allows you to download or delete that data.
            </p>
            <p class="text-danger mb-4">
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>

            <div class="d-flex justify-content-center gap-3">
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="btn btn-lg w-100 flex-fill">
                    <button class="btn btn-lg btn-primary w-100" type="submit">Download Personal Data</button>
                </form>

                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger w-100 flex-fill">Delete Personal Data</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
