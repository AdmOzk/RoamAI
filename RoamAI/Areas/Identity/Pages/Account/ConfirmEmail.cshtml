@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "E-posta Onayı";
}

<div class="confirmation-container" style="margin-top:100px;">
    <h1>@ViewData["Title"]</h1>
    <partial name="_StatusMessage" model="Model.StatusMessage"/>
    <a class="btn btn-outline-primary nav-link mx-1" id="login" asp-area="Identity" asp-page="/Account/Login" style="width: 200px;">Giriş Yap</a>
</div>

<style>
    .confirmation-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        margin-top: 50px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    h1 {
        margin-top: 20px;
    }
</style>