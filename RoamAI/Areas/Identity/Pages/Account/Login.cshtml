@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 95vh; background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/travel-background.png') no-repeat center center/cover;">
    <div class="card shadow-lg" style="width: 100%; max-width: 500px; background-color: rgba(255, 255, 255, 0.7);">
        <div class="card-header text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember Me</label>
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3" style="font-size: 1.2rem; padding: 10px; border-radius: 5px;">
                    Log in
                </button>

                <div class="d-flex justify-content-between">
                    <button type="button" id="forgot-password" class="btn btn-outline-primary me-2 w-100 text-nowrap" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                        Forgot Password
                    </button>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-primary w-100 text-nowrap" role="button">
                        Register
                    </a>
                </div>
                
                <div class="d-flex justify-content-center mt-2">
                    <button type="button" id="resend-confirmation" class="btn btn-outline-primary w-100 text-nowrap" data-bs-toggle="modal" data-bs-target="#resendConfirmationModal">
                        Resend Email Confirmation
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="forgotPasswordModalLabel">Forgot your password?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3" style="font-size: 1.2rem; padding: 10px; border-radius: 5px;">
                        Reset Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="resendConfirmationModal" tabindex="-1" aria-labelledby="resendConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resendConfirmationModalLabel">Resend Email Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3" style="font-size: 1.2rem; padding: 10px; border-radius: 5px;">
                        Resend Confirmation Email
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    .btn-outline-primary:active {
        background-color: #0056b3;
        border-color: #0056b3;
        transform: scale(0.98);
        transition: 0.1s;
    }

    #login-submit, .modal .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: all 0.3s ease;
    }

    #login-submit:hover, .modal .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        box-shadow: 0px 4px 15px rgba(0, 123, 255, 0.5);
        transform: translateY(-2px);
    }

    #login-submit:active, .modal .btn-primary:active {
        background-color: #004085;
        border-color: #004085;
        transform: scale(0.98);
    }

    .modal-backdrop {
        backdrop-filter: blur(12px);
        background-color: rgba(0, 0, 0, 0.85);
    }
</style>
