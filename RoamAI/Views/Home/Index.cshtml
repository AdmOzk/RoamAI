@{
    ViewData["Title"] = "RoamAI";
}

<div class="hero-section text-white text-center d-flex align-items-center justify-content-center" style="height: 100vh; background-image: url('/images/travel-background.png'); background-size: cover; background-position: center; position: relative;">
    <div class="overlay"></div>
    <div class="hero-content">
        <h1 class="display-4">RoamAI</h1>
        <p class="lead">Discover Your Next Adventure</p>
        <a href="#about" class="btn btn-light btn-lg mt-3">Explore</a>
    </div>
</div>

<section id="about" class="container py-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="mb-4">Projenin Amacı</h2>
            <p>
                RoamAI, seyahat planlama sürecini daha kolay ve etkili hale getirmek için geliştirilen bir yapay zeka destekli platformdur.
                Kullanıcılar, dünya çapındaki destinasyonları keşfetmek ve kişiselleştirilmiş seyahat önerileri almak için RoamAI'yi kullanabilir.
            </p>
        </div>
    </div>
</section>

<section id="developers" class="container py-5 bg-light">
    <div class="row text-center">
        <div class="col-md-12">
            <h2 class="mb-4">Geliştiriciler</h2>
        </div>

        <div class="col-md-4">
            <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Developer 1" />
            <h5>Developer 1</h5>
            <p>Backend Developer</p>
        </div>

        <div class="col-md-4">
            <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Developer 2" />
            <h5>Developer 2</h5>
            <p>Frontend Developer</p>
        </div>

        <div class="col-md-4">
            <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Developer 3" />
            <h5>Developer 3</h5>
            <p>AI Specialist</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a class="btn btn-outline-primary btn-lg mx-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="btn btn-outline-primary btn-lg mx-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .hero-section {
        position: relative;
        z-index: 1;
        color: white;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.1);
        z-index: 0;
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .lead {
        font-size: 1.25rem;
        color: #ccc;
    }

    .rounded-circle {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    section {
        padding: 60px 0;
    }

    h2 {
        color: #0056b3;
        margin-bottom: 30px;
    }

    .container p {
        font-size: 1.1rem;
        line-height: 1.7;
        color: #555;
    }

    .btn-lg {
        padding: 15px 30px;
        font-size: 1.25rem;
    }

    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
        transition: all 0.3s ease-in-out;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
        box-shadow: 0px 4px 15px rgba(0, 123, 255, 0.5);
    }

    .col-md-4 img {
        transition: transform 0.3s;
    }

    .col-md-4 img:hover {
        transform: scale(1.05);
    }


    #developers .col-md-4 {
        margin-bottom: 30px;
    }

    footer {
        position: relative;
        bottom: 0;
        width: 100%;
        text-align: center;
        padding: 1rem 0;
        color: white;
        background-color: #333;
        border-top: none;
    }
</style>
