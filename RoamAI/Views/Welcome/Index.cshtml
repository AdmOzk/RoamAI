@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        const cityData = {
            city1: {
                name: 'İstanbul',
                description: 'İstanbul, tarihi ve modern yaşamın eşsiz bir şekilde iç içe geçtiği bir şehirdir. Boğaz\'ın eşsiz manzarası ve tarihi yapılarıyla her zaman büyüler.',
                image: '/images/ist1.png'
            },
            city2: {
                name: 'Paris',
                description: 'Paris, romantizmin ve sanatın merkezi olarak bilinir. Seine Nehri boyunca yürüyüş yapın ve Eyfel Kulesi\'nin nefes kesici manzarasını görün.',
                image: '/images/paris.png'
            },
            city3: {
                name: 'Tokyo',
                description: 'Tokyo, modern ve geleneksel öğelerin büyüleyici bir karışımını sunan bir şehirdir. Neon ışıkları ve tarihi tapınaklarıyla büyüler.',
                image: '/images/tokyo.png'
            },
            city4: {
                name: 'Londra',
                description: 'Londra, tarihi yapıları ve modern yaşamı ile tanınır. Thames Nehri boyunca yürüyüş yapabilir ve şehrin ikonik yapılarının tadını çıkarabilirsiniz.',
                image: '/images/london.png'
            },
            city5: {
                name: 'Roma',
                description: 'Roma, tarihi zenginlikleri ve antik yapıları ile ünlüdür. Colosseum ve Vatikan\'ı ziyaret edin.',
                image: '/images/roma.png'
            },
            city6: {
                name: 'New York',
                description: 'New York, dünya çapında tanınan simge yapıları ve dinamik şehir hayatı ile ünlüdür. Times Meydanı ve Central Park\'ı keşfedin.',
                image: '/images/newyork.png'
            },
            city7: {
                name: 'Sidney',
                description: 'Sidney, güzel plajları ve Opera Binası ile tanınır. Plajlarda vakit geçirin ve şehirdeki kültürel etkinliklerin tadını çıkarın.',
                image: '/images/sydney.png'
            },
            city8: {
                name: 'Cape Town',
                description: 'Cape Town, doğal güzellikleri ve eşsiz manzaraları ile tanınır. Masa Dağı ve sahil bölgelerini keşfedin.',
                image: '/images/capetown.png'
            },
            city9: {
                name: 'Rio de Janeiro',
                description: 'Rio de Janeiro, karnavalı ve plajları ile ünlüdür. Şehrin renkli kültürü ve sahil yaşamını deneyimleyin.',
                image: '/images/rio.png'
            }
        };

        // Tıklama olaylarını destination-card üzerinde tanımlayın
        document.querySelectorAll('.destination-card').forEach((card, index) => {
            card.addEventListener('click', function () {
                const cityKey = `city${index + 1}`;
                openCityInfo(cityKey);
            });
        });

        function openCityInfo(cityKey) {
            const city = cityData[cityKey];
            document.getElementById('cityModalImage').src = city.image;
            document.getElementById('cityModalDetails').querySelector('h5').textContent = city.name;
            document.getElementById('cityDescription').textContent = city.description;
            document.getElementById('cityModal').style.display = 'flex';
        }

        function closeCityInfo() {
            document.getElementById('cityModal').style.display = 'none';
        }


        const backgroundImages = [
            '/images/travel1.png',
            '/images/travel6.png',
            '/images/travel7.png',
            '/images/travel8.png',
            '/images/travel9.png'
        ];

        let currentImageIndex = 0;

        function changeBackgroundImage() {
            currentImageIndex = (currentImageIndex + 1) % backgroundImages.length;
            const heroSection = document.querySelector('.hero-section');
            heroSection.style.backgroundImage = `url(${backgroundImages[currentImageIndex]})`;
            heroSection.classList.add('slide');

            setTimeout(() => {
                heroSection.classList.remove('slide');
            }, 1000);
        }

        setInterval(changeBackgroundImage, 3000);
    </script>
}

