@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .custom-manage-link {
        font-family: 'Alegreya SC', serif; 
        color: #ADD8E6; 
        font-weight: 400;
        text-decoration: none;
        font-style: italic;
    }

    .custom-manage-link:hover {
        color: white !important; 
        text-decoration: none;
    }

    .btn-outline-primary {
        border-color: #ADD8E6; 
        color: black !important; 
    }

    .btn-outline-primary:hover {
        color: white !important; 
    }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link btn btn-outline-primary custom-manage-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            Merhaba @UserManager.GetUserName(User)
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Welcome", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-outline-primary nav-link mx-1" style="width: 100px;">Çıkış Yap</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="btn btn-outline-primary nav-link mx-1" id="register" asp-area="Identity" asp-page="/Account/Register" style="width: 100px;">Kayıt Ol</a>
    </li>
    <li class="nav-item">
            <a class="btn btn-outline-primary nav-link mx-1" id="login" asp-area="Identity" asp-page="/Account/Login" style="width: 100px;">Giriş Yap</a>
    </li>
}
</ul>
